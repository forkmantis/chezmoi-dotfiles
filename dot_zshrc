# Ensure brew is in the PATH.
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/share/dotnet:~/bin:~/.dotnet/tools:/opt/homebrew/bin

# machine specific config
if [ -f ~/.localrc ]; then
   source ~/.localrc
fi

# Z setup
source "$(brew --prefix)/etc/profile.d/z.sh"

CZHOME=~/.local/share/chezmoi

# source all alias files
for src in $(find -H "$CZHOME/aliases" -name '*.alias')
do
    source $src
done
